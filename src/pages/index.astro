<html lang="en">
  <body>
    <h1>Astro Portals example</h1>

    <main style={{ width: "300px" }}>
      <fieldset style={{ marginBottom: "10px" }}>
        <legend> portal </legend>

        <Portal id="test">
          <p>portal content</p>
        </Portal>

        <hr />

        <Portal id="test2">
          <p>portal content 2</p>
